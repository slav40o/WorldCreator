<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WorldCreator.Views"
    xmlns:local="using:WorldCreator.Styles">
    <!-- Phone-->
    <Style TargetType="TextBlock" x:Name="AboutPageHeaderText">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="Margin" Value="15" />
    </Style>
    <Style TargetType="TextBlock" x:Name="AboutPageLogoStyle">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="20, 10, 20, 10" />
    </Style>
    <Style TargetType="TextBlock" x:Name="AboutPageTextStyle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="20" />
    </Style>
    <Style TargetType="views:Item" x:Name="ScrollItemStyle">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Margin" Value="0, 5, 0, 5" />
    </Style>
    <Style TargetType="views:CanvasListView" x:Name="CanvasPositionStyle">
        <Setter Property="Margin" Value="80, 0, 0, 0" />
    </Style>
</ResourceDictionary>
