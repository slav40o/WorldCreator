<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WorldCreator.Views"
    xmlns:local="using:WorldCreator.Styles">
    <!-- W8-->
    <Style TargetType="TextBlock" x:Name="AboutPageHeaderText">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Margin" Value="30" />
    </Style>
    <Style TargetType="TextBlock" x:Name="AboutPageLogoStyle">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="30" />
    </Style>
    <Style TargetType="TextBlock" x:Name="AboutPageTextStyle">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style TargetType="views:Item" x:Name="ScrollItemStyle">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Margin" Value="0, 5, 0, 5" />
    </Style>
    <Style TargetType="views:CanvasListView" x:Name="CanvasPositionStyle">
        <Setter Property="Margin" Value="100, 0, 0, 0" />
    </Style>
</ResourceDictionary>
