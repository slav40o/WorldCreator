<Application
    x:Class="WorldCreator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WorldCreator.Views"
    xmlns:local="using:WorldCreator">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MainStyles.xaml" />
                <ResourceDictionary Source="Styles/PlatformStyles.xaml" />
                <ResourceDictionary>
                    <SolidColorBrush x:Key="AppDarkBlue" Color="#0D56A6" />
                    <SolidColorBrush x:Key="AppLightBlue" Color="#04819E" />
                    <SolidColorBrush x:Key="AppBlueGreen" Color="#00A975" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
